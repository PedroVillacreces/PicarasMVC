@{
    Layout = "../Shared/_RememberLayout.cshtml";
}
@using (Html.BeginForm("SendEmailToReset", "Login", FormMethod.Post))
{
    <div class="container">
        <h2 class="text-center horizontal-line">Activar Cuenta</h2>
    </div>
    <div class="container">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label"><strong>Introduce el email para mandar tus credenciales</strong></label>
                <input class="form-control" type="text" name="email" required />
                <input class="btn btn-default" type="submit" value="Envíar código" />
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
}

