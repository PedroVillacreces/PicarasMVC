@using Picaras.Model.Entities
@model IEnumerable<Product>


<div class="row">
    <h4 class="text-center horizontal-line">ARTÍCULOS DE NUEVA TEMPORADA</h4>
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
                <img src="@item.Picture" alt="@item.Name">
                <div class="caption">
                    <h3>@item.Name</h3>
                    <p>@item.Description</p>
                    @Html.ActionLink("Detalles", "Index", "Item", new { id=@item.ProductId }, new { @class = "btn btn-info" })
                </div>
            </div>
        </div>
    }
</div>
