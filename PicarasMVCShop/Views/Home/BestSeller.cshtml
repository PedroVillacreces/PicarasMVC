@using Picaras.Model.Entities
@model IEnumerable<Product>


<div class="row">
    <h4 class="text-center horizontal-line">ARTÍCULOS MÁS VENDIDOS</h4>
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4" style="margin-bottom: 20px;">
            <div class="thumbnail">
                <img src="@item.Picture" alt="@item.Name">
                <div class="caption">
                    <div class="name-price">
                        <h3>@item.Name</h3>
                        <p>@item.Price€</p>
                    </div>                   
                    <p>@item.Description</p>
                    @Html.ActionLink("Detalles", "Index", "Item", new { id=@item.ProductId }, new { @class = "btn btn-info btn-details" })
                </div>
            </div>
        </div>
    }
</div>



