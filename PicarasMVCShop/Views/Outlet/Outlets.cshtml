@using Picaras.Model.Entities
@model IEnumerable<Product>
@if (Model.Any())
{

    <div class="row" style="margin-bottom:40px;">
        <div class="container">
            <h2 class="text-center horizontal-line">Productos en Outlet</h2>
            @foreach (var item in Model)
            {
                if (item.Picture == null)
                {
                    item.Picture = $"/Content/Images/noImagen.jpg";
                }
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="@item.Picture" alt="@item.Name">
                        <div class="caption">
                            <div class="name-price">
                                <h3>@item.Name</h3>
                                <p>@item.Price€</p>
                            </div>
                            <p>@item.Description</p>
                            @Html.ActionLink("Detalles", "Index", "Item", new { id = @item.ProductId }, new { @class = "btn btn-info btn-details" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <h2 class="text-center quantity">Uppppsss!!! Actualmente no existen productos en Outlet</h2>
}
