@model IEnumerable<Picaras.Model.Entities.Subcategory>

@{
Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="margin-container">
    <h2 style="text-align: center;">Subcategorías</h2>
    <p>
        @Html.ActionLink("Crear nueva Subcategoría", "Create", null, new { @class = "btn btn-about" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Botones
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.SubcategoryId }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.SubcategoryId }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Borrar", "Delete", new { id = item.SubcategoryId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>